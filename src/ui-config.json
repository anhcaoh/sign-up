        { 
            "id": "username",
            "priority": 1,
            "type": "input",
            "inputType": "text",
            "label":"Username",
            "placeholder":"Enter username",
            "value": "",
            "minLength": 3,
            "maxLength": 8,
            "validityMessage":"Username is required",
            "required": true
        },
        { 
            "id": "password",
            "priority": 2,
            "type": "input",
            "inputType": "password",
            "label":"Password",
            "placeholder":"Enter password",
            "value": "",
